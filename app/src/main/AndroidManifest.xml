<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aso">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FilterActivity"></activity>
        <activity
            android:name=".SeeMyAdsActivity"
            android:label="@string/title_activity_see_my_ads"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserAdsActivity"
            android:label="@string/title_activity_user_ads"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdSelectionActivity" />
        <activity android:name=".SelectionActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".AdDetails" />
        <activity android:name=".AdsActivity" />
        <activity android:name=".PostAdActivity" />
        <activity
            android:name=".RegisterActivity"
            android:noHistory="true" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>